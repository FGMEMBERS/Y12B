<!-- Engine 2 internal -->
        <prop>
            <name>propeller2-int</name>
            <reference-dist>2.0</reference-dist>
            <max-dist>10.0</max-dist>
            <mode>looped</mode>
            <path>Aircraft/Y12B/Sounds/fullpower-int.wav</path>
            <property>sim/sound/engine[1]</property>
            <condition>
					<and>
                    <greater-than>
                        <property>controls/engines/engine[1]/throttle</property>
                        <value>0.01</value>
                    </greater-than>
                   
                    <property>sim/current-view/internal</property>
                 </and>
            </condition>
            <volume>
                <property>controls/engines/engine[1]/throttle</property>
                <factor>1.0</factor>
                <offset>0.3</offset>
            </volume>
            <pitch>
                <property>controls/engines/engine[1]/throttle</property>
                <factor>1.1</factor>
                <offset>0.5</offset>
            </pitch>
            <position>
                <x>-6</x>
                <y>2.6</y>
                <z>2.33</z>
            </position>
        </prop>

        <rumble>
            <name>rumble</name>
            <reference-dist>5.0</reference-dist>
            <max-dist>20.0</max-dist>
            <mode>looped</mode>
            <path>Aircraft/Y12B/Sounds/rumble.wav</path>
            <condition>
                <or>
                    <property>gear/gear[0]/wow</property>
                    <property>gear/gear[1]/wow</property>
                    <property>gear/gear[2]/wow</property>
                    <property>gear/gear[3]/wow</property>
                </or>
            </condition>
            <volume>
                <property>velocities/groundspeed-kt</property>
                <factor>0.05</factor>
                <max>1</max>
            </volume>
            <position>
                <x>-3</x>
                <y>0</y>
                <z>-1</z>
            </position>
        </rumble>

        <gear>
            <name>gear</name>
            <mode>in-transit</mode>
            <path>Sounds/gear.wav</path>
            <property>/gear/gear/position-norm</property>
            <volume>
                <property>sim/sound/cabin</property>
            </volume>
            <pitch>
                <internal>dt_play</internal>
                <offset>1.0</offset>
                <factor>-0.001</factor>
            </pitch>
            <position>
                <x>-3</x>
                <y>0</y>
                <z>0.5</z>
            </position>
            <reference-dist>1.0</reference-dist>
            <max-dist>2.0</max-dist>
        </gear>

        <gear>
            <name>gear-lock</name>
            <path>Sounds/gear-lck.wav</path>
            <condition>
                <equals>
                    <property>gear/gear[0]/position-norm</property>
                    <value>0</value>
                </equals>
            </condition>
            <reference-dist>2.0</reference-dist>
            <max-dist>5.0</max-dist>
            <position>
                <x>-3</x>
                <y>0</y>
                <z>0.5</z>
            </position>
            <reference-dist>1.0</reference-dist>
            <max-dist>2.0</max-dist>
        </gear>

     
        <flap>
            <name>flaps</name>
            <mode>in-transit</mode>
            <path>Sounds/flaps.wav</path>
            <property>surface-positions/flap-pos-norm</property>
            <volume>
                <property>sim/sound/cabin</property>
            </volume>
            <position>
                <x>-3</x>
                <y>0</y>
                <z>0.5</z>
            </position>
            <reference-dist>2.0</reference-dist>
            <max-dist>5.0</max-dist>
        </flap>

        <wind>
            <name>wind</name>
            <condition>
                <property>sim/current-view/internal</property>
            </condition>
            <mode>looped</mode>
            <path>Sounds/wind.wav</path>
            <volume>
                <property>sim/sound/cabin</property>
            </volume>
            <position>
                <x>-5</x>
                <y>0</y>
                <z>0</z>
            </position>
            <volume>
                <property>position/altitude-ft</property>
                <factor>-0.000015</factor>
                <offset>1.0</offset>
                <min>0</min>
                <max>0.5</max>
            </volume>
            <volume>
                <property>velocities/airspeed-kt</property>
                <factor>0.0015</factor>
                <min>0.0</min>
                <max>0.25</max>
            </volume>
            <pitch>
                <property>velocities/airspeed-kt</property>
                <factor>0.01</factor>
                <offset>1.0</offset>
            </pitch>
            <position>
                <x>-3</x>
                <y>0</y>
                <z>0.5</z>
            </position>
            <reference-dist>1.0</reference-dist>
            <max-dist>2.0</max-dist>
        </wind>

                                      <!--   DOORS  -->

  <!-- Cabin DOOR  -->
        <door>
            <name>cabin_door wind</name>
            <mode>looped</mode>
            <path>Sounds/wind1.wav</path>
            <condition>
				
                     <greater-than>
                        <property>/velocities/airspeed-kt</property>
                        <value>90.0</value>
                    </greater-than>   
              
             </condition>
            <volume>
                <property>/controls/doors/door0/position-norm</property>
                <factor>1</factor>
            </volume>
           
            <position>
                <x>-1</x>
                <y>-1.0</y>
                <z>2.5</z>
            </position>
            <reference-dist>0.5</reference-dist>
            <max-dist>10.0</max-dist>
        </door>

       
  <door>
            <name>cabin_door moving</name>
            <mode>looped</mode>
            <path>Aircraft/Y12B/Sounds/rumble.wav</path>
            <condition>
				<and>
                    <less-than>
                    <property>/controls/doors/door0/position-norm</property>
                    <value>1.0</value>
                    </less-than>
                    
                    <greater-than>
                    <property>/controls/doors/door0/position-norm</property>
                    <value>0.0</value>
                    </greater-than>
                </and>
            </condition>
            <volume>
                
                <factor>0.7</factor>
            </volume>
            <position>
                <x>-3</x>
                <y>-1.0</y>
                <z>2.5</z>
            </position>
            <reference-dist>0.5</reference-dist>
            <max-dist>10.0</max-dist>
        </door>



  <!-- cabin-cockpit DOOR  -->

        <door>
            <name>ccdoor moving</name>
            <mode>looped</mode>
            <path>Aircraft/Y12B/Sounds/rumble.wav</path>
            <condition>
				<and>
                    <less-than>
                    <property>/controls/doors/door2/position-norm</property>
                    <value>1.0</value>
                    </less-than>
                    
                    <greater-than>
                    <property>/controls/doors/door2/position-norm</property>
                    <value>0.0</value>
                    </greater-than>
                </and>
            </condition>
            <volume>
                
                <factor>0.3</factor>
            </volume>
            <position>
                <x>-6</x>
                <y>0.0</y>
                <z>2.5</z>
            </position>
            <reference-dist>0.5</reference-dist>
            <max-dist>10.0</max-dist>
        </door>

		<door>
            <name>ccdoor close</name>
            <mode>once</mode>
            <path>Aircraft/Y12B/Sounds/dhc6-door_open.wav</path>
            <condition>
                   
                    <property>/controls/doors/door2/position-norm</property>
                    <value>1</value>
                   
            </condition>
            <volume>
               
                <factor>0.2</factor>
            </volume>
            <position>
                <x>-3</x>
                <y>-0.5</y>
                <z>0.5</z>
            </position>
            <reference-dist>0.5</reference-dist>
            <max-dist>10.0</max-dist>
        </door>

    </fx>

</PropertyList>
