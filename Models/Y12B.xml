<!-- pilot (has no head in pilot view) -->
<model>
		<name>pilot</name>
      <path>Aircraft/Generic/Human/Models/pilot.xml</path>
	  <name>pilot</name>
		<nopreview/>
      <offsets> 
        <x-m>-7.0384</x-m>
        <y-m>-0.4858</y-m>
        <z-m>1.5</z-m>
      </offsets>
</model>

<!--== person sitting next to pilot ==-->	
<model>
		<name>npc0</name>
      <path>Aircraft/Generic/Human/Models/npc0.xml</path>
		<nopreview/>
      <offsets> 
        <x-m>-7.0384</x-m>
        <y-m>0.45</y-m>
        <z-m>1.5</z-m>
      </offsets>
</model>

<!--== person sitting in cabin ==-->	
<model>
		<name>npc1</name>
		 <path>Aircraft/Generic/Human/Models/npc1.xml</path>
		<nopreview/>
		<offsets> 
			<heading-deg>90</heading-deg>
			<x-m>-3.2</x-m>
			<y-m>0.65</y-m>
			<!--== the pose from the bluebird has a Z offset ==-->
			<z-m>0.90</z-m>
		</offsets>
</model>
 <!--== shrink sitting person in cabin from 1.73m to 1.38m ==-->	
<animation>
  <type>scale</type>
  <object-name>npc1</object-name>
  <x-offset>0.8</x-offset>
  <y-offset>0.8</y-offset>
  <z-offset>0.8</z-offset>
   <center>
   <x-m>-3.20</x-m>
   <y-m> 0.7  </y-m>
   <z-m> 1.8</z-m>
  </center>
 </animation>


<model>
        <path>Aircraft/Y12B/Models/Instruments/altimeter.xml</path>
        <name>Altimeter</name>
        <offsets>
            <x-m>-7.71</x-m>
            <y-m>-0.594</y-m>
            <z-m>2.364</z-m>
        </offsets>
    </model>





<!--== propellers ==-->	
	<animation>
		<type>spin</type>
		<object-name>left_prop</object-name>
		<property>controls/engines/engine/throttle</property>
		<offset>10</offset>
		<factor>5000</factor>
		<center>
			<x-m>0</x-m>
			<y-m>-2.74953</y-m>
			<z-m>1.78685</z-m>
		</center>
		<axis>
			<x>-1</x>
			<y>0</y>
			<z>0</z>
		</axis>
	</animation>

	<animation>
		<type>spin</type>
		<object-name>right_prop</object-name>
		<property>controls/engines/engine/throttle</property>
		<factor>5000</factor>
		<center>
			<x-m>0</x-m>
			<y-m>2.66148</y-m>
			<z-m>1.78729</z-m>
		</center>
		<axis>
			<x>1</x>
			<y>0</y>
			<z>0</z>
		</axis>
	</animation>
	
<!--== landing gear ==-->	
<animation>
		<type>select</type>
		<object-name>wheels</object-name>
		<object-name>landing_gear</object-name>
		<condition>
			 <less-than>
				 <property>position/altitude-agl-ft</property>
                 <value>100</value>
           </less-than>	
		</condition>
</animation>

<!--== cabin door ==-->
<animation>
		<type>pick</type>
		<object-name>cabin_door</object-name>
		<action>
			<button>0</button>
			<repeatable>false</repeatable>
			<binding>
				<command>nasal</command>
				<script>Y12B.toggle_door0()</script>
			</binding>
		</action>
</animation>

<animation>
		<type>translate</type>
		<object-name>cabin_door</object-name>
		<property>controls/doors/door0/position-norm</property>
		<interpolation>
			<entry>
				<ind>0.0</ind>
				<dep>0.0</dep>
			</entry>
			<entry>
				<ind>1.00</ind>
				<dep>0.90</dep>
			</entry>
		</interpolation>
		<axis>
			<x>1.0</x>
			<y>0.0</y>
			<z>0.0</z>
		</axis>
</animation>

<!--== cockpit to cabin door ==-->
<animation>
		<type>pick</type>
		<object-name>cabin-cockpit-door</object-name>
		<action>
			<button>0</button>
			<repeatable>false</repeatable>
			<binding>
				<command>nasal</command>
				<script>Y12B.toggle_door2()</script>
			</binding>
		</action>
</animation>

<animation>
		<type>translate</type>
		<object-name>cabin-cockpit-door</object-name>
		<property>controls/doors/door2/position-norm</property>
		<interpolation>
			<entry>
				<ind>0.0</ind>
				<dep>0.0</dep>
			</entry>
			<entry>
				<ind>1.00</ind>
				<dep>0.60</dep>
			</entry>
		</interpolation>
		<axis>
			<x>0.0</x>
			<y>-1.0</y>
			<z>0.0</z>
		</axis>
</animation>


<!-- seat 5 -->
<animation>
		<type>pick</type>
		<object-name>seat</object-name>
		<object-name>seat-legs</object-name>
		<object-name>seat-surface</object-name>
		<action>
			<button>0</button>
			<repeatable>false</repeatable>
			<binding>
				<command>nasal</command>
				<script>Y12B.toggle_door1()</script>
			</binding>
		</action>
</animation>
<animation>
        <type>rotate</type>
        <object-name>seat</object-name>
		<object-name>seat-legs</object-name>
		<object-name>seat-surface</object-name>
        <property>controls/doors/door1/position-norm</property>
       
		<center>
			<x-m>-3.2</x-m>
			<y-m>0.903</y-m>
			<z-m>0.4</z-m>
		</center>
		<interpolation>
			<entry><ind>0.0</ind><dep>0.0</dep></entry>
			<entry><ind>1.0</ind><dep>-90.0</dep></entry>
		</interpolation>
		<axis>
			<x>1</x>
			<y>0</y>
			<z>0</z>
		</axis>
</animation>
<animation>
        <type>select</type>
		<object-name>seat-legs</object-name>
		<condition>
			 <less-than>
				 <property>controls/doors/door1/position-norm</property>
                 <value>1.0</value>
           </less-than>	
		</condition>
</animation>



</PropertyList>
