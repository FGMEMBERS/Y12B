<?xml version="1.0"?>
<!--== Y12B                  ==-->

<PropertyList>
	<model>
		<name>Y12B</name>
		<offsets> 
			<z-m>1.30</z-m>
		</offsets>
		<path>Aircraft/Y12B/Models/Y12B.ac</path>
		
	</model>

