      </offsets>
</model>
<model>
		<name>npc1</name>
		 <path>Aircraft/Generic/Human/Models/npc1.xml</path>
		<nopreview/>
		<offsets> 
			<heading-deg>90</heading-deg>
			<x-m>-3.2</x-m>
			<y-m>0.65</y-m>
			<z-m>0.90</z-m>
		</offsets>
</model>

<animation>
  <type>scale</type>
  <object-name>npc1</object-name>
  <x-offset>0.8</x-offset>
  <y-offset>0.8</y-offset>
  <z-offset>0.8</z-offset>
   <center>
   <x-m>-3.20</x-m>
   <y-m> 0.7  </y-m>
   <z-m> 1.8</z-m>
  </center>
 </animation>


	<animation>
		<type>spin</type>
		<object-name>left_prop</object-name>
		<property>controls/engines/engine/throttle</property>
		<offset>10</offset>
		<factor>5000</factor>
		<center>
			<x-m>0</x-m>
			<y-m>-2.74953</y-m>
			<z-m>1.78685</z-m>
		</center>
		<axis>
			<x>-1</x>
			<y>0</y>
			<z>0</z>
		</axis>
	</animation>

	<animation>
		<type>spin</type>
		<object-name>right_prop</object-name>
		<property>controls/engines/engine/throttle</property>
		<factor>5000</factor>
		<center>
			<x-m>0</x-m>
			<y-m>2.66148</y-m>
			<z-m>1.78729</z-m>
		</center>
		<axis>
			<x>1</x>
			<y>0</y>
			<z>0</z>
		</axis>
	</animation>
	
<!--== landing gear ==-->	
	
<animation>
		<type>select</type>
		<object-name>wheels</object-name>
		<object-name>landing_gear</object-name>
		<condition>
			 <less-than>
				 <property>position/altitude-agl-ft</property>
                 <value>100</value>
           </less-than>	
		</condition>
	</animation>

<!--== door ==-->
	<animation>
		<type>translate</type>
		<object-name>cabin_door</object-name>
		<property>sim/model/Y12B/door/position-adj</property>
		<factor>0.9</factor>
		<axis>
		   <x>1</x>
		   <y>0</y>
		   <z>0</z>
		</axis>
	</animation>

</PropertyList>
