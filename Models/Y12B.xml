<?xml version="1.0"?>
<!--== Y12B                  ==-->

<PropertyList>
	<model>
		<name>Y12B</name>
		<offsets> 
			<z-m>1.30</z-m>
		</offsets>
		<path>Aircraft/Y12B/Models/Y12B.ac</path>
		
	</model>

  <nasal>
    <load>
      var self = cmdarg();

      var float_0 = self.getNode("sim/multiplay/generic/float[0]", 1);
      var float_1 = self.getNode("sim/multiplay/generic/float[1]", 1);
      
      var cabin_door = self.getNode("instrumentation/doors/cabin_door/position-norm", 1);
      var seat5 = self.getNode("instrumentation/doors/seat5/position-norm", 1);
    
      cabin_door.alias(float_0);
           seat5.alias(float_1);
    </load>

    <unload>
      cabin_door.unalias();
      seat5.unalias();
    </unload>
  </nasal>

<sound>
  <path>Aircraft/Y12B/Sounds/Y12B-sound.xml</path>
</sound>


<animation>
		<type>pick</type>
		<object-name>cabin_door</object-name>
		<action>
			<button>0</button>
            <repeatable>false</repeatable>
			 <command>nasal</command>
			<script>doors.cabin_door.toggle();</script> 
		</action>
</animation>

<animation>
		<type>pick</type>
		<object-name>seat</object-name>
		<object-name>seat-legs"</object-name>
		<object-name>seat-surface"</object-name>
		<action>
			  <command>nasal</command>
			<script>doors.seat5.toggle();</script> 
		</action>
</animation>




 <animation>
        <type>shader</type>
        <shader>chrome</shader>
        <texture>Aircraft/Generic/Effects/glass_shader.png</texture>
        <!-- TODO -->
        <object-name>Lrdoor.glass</object-name>
    </animation>



<!-- crew -->
	<model>
		<name>pilot</name>
		<path>Aircraft/Y12B/Models/pilot.xml</path>
		<nopreview/>
		<offsets> 
			<x-m>-7.0</x-m>
			<y-m>0.5</y-m>
			<z-m>0.70</z-m>
		</offsets>
	</model>
<model>
		<name>passenger</name>
		<path>Aircraft/Y12B/Models/passenger.xml</path>
		<nopreview/>
		<heading>90</heading>
		<offsets> 
			<heading-deg>90</heading-deg>
			<x-m>-7.0</x-m>
			<y-m>-0.4</y-m>
			<z-m>0.70</z-m>
		</offsets>
</model>

	<animation>
		<type>spin</type>
		<object-name>left_prop</object-name>
		<property>controls/engines/engine/throttle</property>
		<offset>10</offset>
		<factor>5000</factor>
		<center>
			<x-m>0</x-m>
			<y-m>-2.74953</y-m>
			<z-m>1.78685</z-m>
		</center>
		<axis>
			<x>-1</x>
			<y>0</y>
			<z>0</z>
		</axis>
	</animation>

	<animation>
		<type>spin</type>
		<object-name>right_prop</object-name>
		<property>controls/engines/engine/throttle</property>
		<factor>5000</factor>
		<center>
			<x-m>0</x-m>
			<y-m>2.66148</y-m>
			<z-m>1.78729</z-m>
		</center>
		<axis>
			<x>1</x>
			<y>0</y>
			<z>0</z>
		</axis>
	</animation>
	
<!--== landing gear ==-->	
	
<animation>
		<type>select</type>
		<object-name>wheels</object-name>
		<object-name>landing_gear</object-name>
		<condition>
			 <less-than>
				 <property>position/altitude-agl-ft</property>
                 <value>100</value>
           </less-than>	
		</condition>
	</animation>

<!--== door ==-->
	<animation>
		<type>translate</type>
		<object-name>cabin_door</object-name>
		<property>sim/multiplay/generic/float[0]</property>
		<factor>0.9</factor>
		<axis>
		   <x>1</x>
		   <y>0</y>
		   <z>0</z>
		</axis>
	</animation>

</PropertyList>
