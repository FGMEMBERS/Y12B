<!--== Y12B                  ==-->

<PropertyList>
	<model>
		<name>Y12B</name>
		<offsets> 
			<z-m>1.30</z-m>
		</offsets>
		<path>Aircraft/Y12B/Models/Y12B.ac</path>
		
	</model>

<animation>
		<type>pick</type>
		<object-name>cabin_door</object-name>
		<action>
			<button>0</button>
            <binding>
                <command>property-toggle</command>
                <property>controls/doors/cabin_door/open</property>
            </binding>
			 
		</action>
</animation>

<animation>
		<type>pick</type>
		<object-name>seat</object-name>
		<object-name>seat-legs"</object-name>
		<object-name>seat-surface"</object-name>
		<action>
			 <!-- TODO -->
		</action>
</animation>




 <animation>
        <type>shader</type>
        <shader>chrome</shader>
        <texture>Aircraft/Generic/Effects/glass_shader.png</texture>
        <!-- TODO -->
        <object-name>Lrdoor.glass</object-name>
    </animation>



<!-- crew -->
